{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block content %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomClient</th>
                <th>AdresseClient</th>
                <th>TelephoneClient</th>
                <th>IsActive</th>
                <th>PrenomClient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.adresseClient }}</td>
                <td>{{ client.telephoneClient }}</td>
                <td>{{ client.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ client.prenomClient }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
